{
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["ES6"],
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "",
    "baseUrl": "."
  },
  "exclude": ["node_modules", "dist"]
}
